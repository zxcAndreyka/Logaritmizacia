Console.WriteLine("Введите номер задания");
            int egor = Convert.ToInt32(Console.ReadLine());
            switch (egor)
            {
                case 1:
                    Console.WriteLine("Напишите числа в римской системе.С большой буквы,в формате: СI");
                    string rim = Console.ReadLine();
                    int number = 0;
                    int count = 0;
                    int r = 0;
                    char[] mass = rim.ToCharArray(); 
                    for (int i = 0 ;i < mass.Length ;i++)
                    {
                        count = r;
                        if (mass[i] == 'I')
                        {
                            r = 1;
                            number += 1;
                        }
                        else if (mass[i] == 'V')
                        {
                            r = 5;
                            number += 5;
                        }
                        else if (mass[i] == 'X')
                        {
                            r = 10;
                            number += 10;
                        }
                        else if (mass[i] == 'L')
                        {
                            r = 50;
                            number += 50;
                        }
                        else if (mass[i] == 'C')
                        {
                            r = 100;
                            number += 100;
                        }
                        else if (mass[i] == 'D')
                        {
                            r = 500;
                            number += 500;
                        }
                        else if (mass[i] == 'M')
                        {
                            r = 1000;
                            number += 1000;
                        }
                        if(count < r)
                        {
                            number -= count*2;
                        }
                    }
                    Console.WriteLine(number);
                    
                    break;
                    case2:
                    Console.WriteLine("Введите кол-во учеников");
            int x = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите Фамилии и инициалы ученика, без пробелов ");
            string[] surname = new string[x];
            int repsur = 0;
            for (int i = 0; i < x; i++)
            {
                surname[i] = Console.ReadLine();

            }
            Console.WriteLine("Список учеников");
            for (int i = 0; i < x; i++)
            {
                Console.WriteLine(surname[i]+ repsur);

            }
            case3:
            Console.WriteLine("Введите число в двоичной системе, только 0 и 1");
            string number = Console.ReadLine();
            char[] mass = number.ToCharArray();
            int deg = 0;
            int ch = 0;
            for (int i = 0; i < mass.Length; i++)
            {
                if ((mass[i] != '0' && mass[i] != '1'))
                {
                    Console.WriteLine("Число введено в некоректной форме. Введите число в двоичной системе, только 0 и 1");
                    number = Console.ReadLine();
                    mass = number.ToCharArray();
                }
            }
            for (int i = number.Length - 1; i>= 0;i--)
            {
                if (mass[i] == '1')
                {
                    ch += Convert.ToInt32(Math.Pow(2, deg));
                }
                ++deg;
            }
            Console.WriteLine(ch);
            
            
            
